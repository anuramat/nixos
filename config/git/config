; imports
[include]
  path=user

[difftool "difftastic"]
  ; TODO how does this work?
  cmd = difft "$MERGED" "$LOCAL" "abcdef1" "100644" "$REMOTE" "abcdef2" "100644"

[diff]
  tool = difftastic
  external = difft --display inline

[diff "nodiff"]
  command="__nodiff() { echo skipping \"$1\"; }; __nodiff"

# unchecked slop {{{1
[diff "jupyternotebook"]
	command = git-nbdiffdriver diff
[merge "jupyternotebook"]
	driver = git-nbmergedriver merge %O %A %B %L %P
	name = jupyter notebook merge driver
[difftool "nbdime"]
	cmd = git-nbdifftool diff \"$LOCAL\" \"$REMOTE\" \"$BASE\"
[mergetool "nbdime"]
	cmd = git-nbmergetool merge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
[mergetool]
	prompt = false
# }}}

[difftool]
  prompt = false

[pager]
  difftool = true

[core]
  pager = less -F

; ghq
; WARN: XDGBDSV
[ghq]
root = "~/.local/share/ghq"

[advice]
  detachedHead = false
  addEmptyPathspec = false

[push]
  autoSetupRemote = true

[merge "todo"]
  driver = todo merge %A %O %B

[pull]
  ff = only

[alias]
  st = status
  sh = show --ext-diff
  ch = checkout
  br = branch
  sw = switch
  cm = commit
  ps = push
  l = log --ext-diff
  lg = log --ext-diff --oneline --graph --all --decorate
  df = diff
  ds = diff --staged

[init]
  defaultBranch = main

