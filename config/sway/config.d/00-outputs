# `swaymsg -t get_outputs`

set {
    $internal eDP-1
    $external DP-1 DP-2 DP-3 HDMI-A-2
}

# XXX Sometimes the screen doesn't turn on
# https://github.com/swaywm/sway/issues/7228
bindswitch --locked lid:on output $internal disable
bindswitch --locked lid:off output $internal enable

workspace {
    1:1 output $internal
    2:2 output $internal
    3:3 output $internal
    4:4 output $internal
    5:5 output $internal

    6:6 output $external
    7:7 output $external
    8:8 output $external
    9:9 output $external
    10:0 output $external
}

# vim: ft=swayconfig
